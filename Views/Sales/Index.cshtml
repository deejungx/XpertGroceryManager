@model IEnumerable<XpertGroceryManager.Models.Sales>

@{
    ViewData["Title"] = "Sales";
}

<div class="row mb-3">
    <div class="col-sm-8">
        <h1>Sales</h1>
    </div>
    <div class="col-sm-4 add-btn-container">
        <a class="btn btn-primary" role="button" asp-action="Create">Add a Sale</a>
    </div>
</div>

<div class="row mb-3">
    <div class="col-sm-8">
        <p>List of Sales.</p>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    <a class="badge badge-success action-button" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="badge badge-info action-button" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="badge badge-danger action-button" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
